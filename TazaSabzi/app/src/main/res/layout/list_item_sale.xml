<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:background="@drawable/backg"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/p_item_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/background_login"
        android:src="@drawable/ic_male_user" />

    <TextView
        android:id="@+id/pItemNameVal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Egg Plant"
        android:textColor="#FF9800"
        android:textSize="14dp"
        />

    <TextView
        android:id="@+id/pItemPriceVal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PKR 100.00"
        android:textColor="#FF9800"
        android:textSize="14dp"
        />
    <Button
        android:id="@+id/btnCartItem"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginStart="150dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#FF9800"
        android:padding="0dp"
        android:text="Add to Cart"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnBuyItem"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginStart="12dp"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/btnCartItem"
        android:backgroundTint="#FF9800"
        android:padding="0dp"
        android:text="Buy"
        android:textAllCaps="false" />
</RelativeLayout>