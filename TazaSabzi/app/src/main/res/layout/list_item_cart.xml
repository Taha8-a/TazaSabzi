<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backg"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/item_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/background_login"
        android:src="@drawable/ic_male_user"
        />

    <TextView
        android:id="@+id/item_name"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:text="Item Name:"
        android:textSize="14dp"
        />

    <TextView
        android:id="@+id/item_name_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/item_name"
        android:text="Egg Plant"
        android:textColor="#FF9800"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/item_price"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="80dp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Price:"
        android:textSize="14dp"
        />

    <TextView
        android:id="@+id/item_price_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/item_price"
        android:text="PKR 100.00"
        android:textColor="#FF9800"
        android:textSize="14dp" />


    <Button
        android:id="@+id/btn_update_item"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="44dp"
        android:layout_marginRight="5dp"
        android:layout_toEndOf="@+id/btn_delete_item"
        android:backgroundTint="#FF9800"
        android:padding="0dp"
        android:text="Buy"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_delete_item"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#FF9800"
        android:padding="0dp"
        android:text="Remove"
        android:textAllCaps="false" />


</RelativeLayout>